{
  "name": "@kindkitchen/testkit",
  "version": "0.3.8",
  "exports": {
    "./make_fixture_cjs": "./transpiled/make_fixture.js",
    "./make_fixture": "./src/make_fixture.ts"
  },
  "nodeModulesDir": "auto",
  "exactOptionalPropertyTypes": true,
  "imports": {
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.4",
    "tsup": "npm:tsup@^8.5.1"
  },
  "fmt": {
    "exclude": ["dist", "transpiled"]
  },
  "license": "MIT",
  "tasks": {
    "clean": {
      "description": "Remove build artifacts",
      "command": "rm -fr transpiled"
    },
    "transpile": {
      "description": "ts to js",
      "command": "deno x tsup --config .config/tsup.config.ts",
      "dependencies": [
        "clean"
      ]
    },
    "format": {
      "description": "Fix formatting",
      "command": "deno fmt",
      "dependencies": [
        "transpile"
      ]
    },
    "gitam": {
      "description": "Quick git commit",
      "command": "git add -A && git commit",
      "dependencies": [
        "format"
      ]
    },
    "pr": {
      "description": "Shortcut to create PR and merge dev branch into main",
      "command": "git push origin dev && gh pr create --fill-verbose && gh pr merge --auto --merge",
      "dependencies": [
        "gitam"
      ]
    }
  }
}
